{
    "rsync": {
      "paths": [
        {
            "src": "dir1",
            "exclude": ["*/venv*", "*/__.*"],
            "isconf": true,
            "require_closed": "some_pid",
            "archive": "arch"
        },
        {
            "src": "g.xml"
        },
        {
            "src": "{h.go,l.doc}",
            "dst": "dir1/conf"
        }
      ],
      "settings": {
        "rmode": "truOvn",
        "rconfmode": "trOn",
        "rlogfilename": "some/pa th/test.log",
        "rlogfileformat": "/%f",
        "cmd":
        {
          "pre": ["echo 'Goodbye' | tee ${LOG_PATH}", "man tee"],
          "post": ["echo 'Hello, world'"]
        },
        "mkdirs": ["dir1/conf"],
        "monitor": "tree"
      }
    },
    "settings": {
      "editor": ["nvim", "+1", "-c set filetype=sh", "${FILE}"]
    }
  }